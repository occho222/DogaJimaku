<Window x:Class="DogaJimaku.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DogaJimaku"
        mc:Ignorable="d"
        Title="DogaJimaku - 動画字幕エディタ" Height="800" Width="1400">
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>

        <!-- ツールバー -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="BtnOpenVideo" Content="📁 動画を開く" Style="{StaticResource ModernButton}" Click="BtnOpenVideo_Click" Margin="0,0,10,0"/>
                    <Button x:Name="BtnAddSubtitle" Content="➕ 字幕追加" Style="{StaticResource ModernButton}" Click="BtnAddSubtitle_Click" Margin="0,0,10,0" IsEnabled="False"/>
                    <Button x:Name="BtnSave" Content="💾 保存" Style="{StaticResource ModernButton}" Click="BtnSave_Click" Margin="0,0,10,0" IsEnabled="False"/>
                    <Button x:Name="BtnExport" Content="📤 字幕出力" Style="{StaticResource ModernButton}" Click="BtnExport_Click" Margin="0,0,10,0" IsEnabled="False"/>
                    <Button x:Name="BtnExportVideo" Content="🎬 動画出力" Style="{StaticResource ModernButton}" Click="BtnExportVideo_Click" Margin="0,0,10,0" IsEnabled="False" Background="#FF6F00"/>
                </StackPanel>

                <!-- 進捗表示 -->
                <StackPanel x:Name="ProgressPanel" Orientation="Horizontal" HorizontalAlignment="Right" Visibility="Collapsed">
                    <TextBlock x:Name="TxtProgress" Text="処理中..." VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                    <ProgressBar x:Name="ProgressBar" Width="200" Height="20" Minimum="0" Maximum="100" Value="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 動画プレビューエリア -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- 動画プレビュー -->
            <Border Grid.Column="0" Background="Black" CornerRadius="8" Margin="0,0,10,0">
                <Grid>
                    <MediaElement x:Name="VideoPlayer"
                                  LoadedBehavior="Manual"
                                  UnloadedBehavior="Stop"
                                  Stretch="Uniform"
                                  MediaOpened="VideoPlayer_MediaOpened"
                                  MediaEnded="VideoPlayer_MediaEnded"/>

                    <!-- 字幕オーバーレイ -->
                    <Grid x:Name="SubtitleOverlay">
                        <TextBlock x:Name="SubtitleText"
                                   FontSize="48"
                                   FontWeight="Bold"
                                   Foreground="Red"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Bottom"
                                   HorizontalAlignment="Center"
                                   Margin="40,0,40,40"
                                   MaxWidth="800">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.9"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>

                    <!-- 動画がない場合のメッセージ -->
                    <TextBlock x:Name="NoVideoMessage"
                               Text="動画ファイルを開いてください"
                               FontSize="24"
                               Foreground="#AAAAAA"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- 字幕編集パネル -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="字幕編集" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="SubtitleEditPanel">
                            <!-- 字幕テキスト -->
                            <TextBlock Text="字幕テキスト" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="TxtSubtitleText"
                                     Height="80"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     Padding="8"
                                     FontSize="14"
                                     Margin="0,0,0,15"
                                     TextChanged="TxtSubtitleText_TextChanged"/>

                            <!-- 開始時間 -->
                            <TextBlock Text="開始時間 (秒)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TxtStartTime"
                                         Grid.Column="0"
                                         Padding="8"
                                         FontSize="14"
                                         Margin="0,0,10,0"
                                         TextChanged="TxtStartTime_TextChanged"/>
                                <Button Grid.Column="1"
                                        Content="現在位置"
                                        Click="BtnSetStartTime_Click"
                                        Padding="10,5"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"/>
                            </Grid>

                            <!-- 終了時間 -->
                            <TextBlock Text="終了時間 (秒)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TxtEndTime"
                                         Grid.Column="0"
                                         Padding="8"
                                         FontSize="14"
                                         Margin="0,0,10,0"
                                         TextChanged="TxtEndTime_TextChanged"/>
                                <Button Grid.Column="1"
                                        Content="現在位置"
                                        Click="BtnSetEndTime_Click"
                                        Padding="10,5"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"/>
                            </Grid>

                            <!-- 位置設定 -->
                            <TextBlock Text="字幕位置" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="CmbPosition"
                                      SelectedIndex="0"
                                      Padding="8"
                                      FontSize="14"
                                      Margin="0,0,0,15"
                                      SelectionChanged="CmbPosition_SelectionChanged">
                                <ComboBoxItem Content="下部中央"/>
                                <ComboBoxItem Content="上部中央"/>
                                <ComboBoxItem Content="中央"/>
                                <ComboBoxItem Content="左下"/>
                                <ComboBoxItem Content="右下"/>
                            </ComboBox>

                            <!-- フォントサイズ -->
                            <TextBlock Text="フォントサイズ" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <Slider x:Name="SliderFontSize"
                                    Minimum="16"
                                    Maximum="72"
                                    Value="48"
                                    TickFrequency="4"
                                    IsSnapToTickEnabled="True"
                                    Margin="0,0,0,5"
                                    ValueChanged="SliderFontSize_ValueChanged"/>
                            <TextBlock x:Name="TxtFontSizeValue" Text="48px" HorizontalAlignment="Right" Margin="0,0,0,15"/>

                            <!-- 文字色 -->
                            <TextBlock Text="文字色" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="CmbTextColor"
                                      SelectedIndex="0"
                                      Padding="8"
                                      FontSize="14"
                                      Margin="0,0,0,15"
                                      SelectionChanged="CmbTextColor_SelectionChanged">
                                <ComboBoxItem Content="🔴 赤" Tag="Red"/>
                                <ComboBoxItem Content="⚪ 白" Tag="White"/>
                                <ComboBoxItem Content="🟡 黄" Tag="Yellow"/>
                                <ComboBoxItem Content="🟢 緑" Tag="Lime"/>
                                <ComboBoxItem Content="🔵 青" Tag="Cyan"/>
                                <ComboBoxItem Content="🟣 紫" Tag="Magenta"/>
                                <ComboBoxItem Content="⚫ 黒" Tag="Black"/>
                            </ComboBox>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- コントロールバー -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 再生コントロール -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <Button x:Name="BtnBackward5" Content="⏪ -5秒" Click="BtnBackward5_Click" Style="{StaticResource ModernButton}" Width="90" Margin="0,0,5,0" IsEnabled="False"/>
                    <Button x:Name="BtnBackward1" Content="◀️ -1秒" Click="BtnBackward1_Click" Style="{StaticResource ModernButton}" Width="90" Margin="0,0,10,0" IsEnabled="False"/>
                    <Button x:Name="BtnPlayPause" Content="▶️ 再生" Click="BtnPlayPause_Click" Style="{StaticResource ModernButton}" Width="100" Margin="0,0,10,0" IsEnabled="False"/>
                    <Button x:Name="BtnStop" Content="⏹️ 停止" Click="BtnStop_Click" Style="{StaticResource ModernButton}" Width="100" Margin="0,0,10,0" IsEnabled="False"/>
                    <Button x:Name="BtnForward1" Content="▶️ +1秒" Click="BtnForward1_Click" Style="{StaticResource ModernButton}" Width="90" Margin="0,0,5,0" IsEnabled="False"/>
                    <Button x:Name="BtnForward5" Content="⏩ +5秒" Click="BtnForward5_Click" Style="{StaticResource ModernButton}" Width="90" Margin="0,0,20,0" IsEnabled="False"/>

                    <Button x:Name="BtnSpeedSlow" Content="🐢 0.5x" Click="BtnSpeedSlow_Click" Style="{StaticResource ModernButton}" Width="80" Margin="0,0,5,0" IsEnabled="False" Background="#FF9800"/>
                    <Button x:Name="BtnSpeedNormal" Content="▶️ 1.0x" Click="BtnSpeedNormal_Click" Style="{StaticResource ModernButton}" Width="80" Margin="0,0,5,0" IsEnabled="False" Background="#4CAF50"/>
                    <Button x:Name="BtnSpeedFast" Content="🐇 2.0x" Click="BtnSpeedFast_Click" Style="{StaticResource ModernButton}" Width="80" Margin="0,0,20,0" IsEnabled="False" Background="#FF9800"/>

                    <TextBlock x:Name="TxtCurrentTime" Text="00:00:00" VerticalAlignment="Center" Margin="0,0,5,0" FontFamily="Consolas" FontSize="14" FontWeight="Bold"/>
                    <TextBlock Text="/" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock x:Name="TxtDuration" Text="00:00:00" VerticalAlignment="Center" FontFamily="Consolas" FontSize="14"/>
                </StackPanel>

                <!-- シークバー -->
                <Slider x:Name="SeekBar"
                        Grid.Row="1"
                        Minimum="0"
                        Maximum="100"
                        Value="0"
                        IsMoveToPointEnabled="True"
                        Thumb.DragStarted="SeekBar_DragStarted"
                        Thumb.DragCompleted="SeekBar_DragCompleted"
                        ValueChanged="SeekBar_ValueChanged"/>
            </Grid>
        </Border>

        <!-- タイムライン/字幕リスト -->
        <Border Grid.Row="3" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="字幕タイムライン" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                <ListBox Grid.Row="1"
                         x:Name="SubtitleListBox"
                         SelectionChanged="SubtitleListBox_SelectionChanged"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FAFAFA"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="10"
                                    Margin="0,2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding StartTimeFormatted}" FontFamily="Consolas" FontSize="12" Foreground="#666"/>
                                        <TextBlock Text="↓" FontSize="10" Foreground="#999" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding EndTimeFormatted}" FontFamily="Consolas" FontSize="12" Foreground="#666"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Text}"
                                               TextWrapping="Wrap"
                                               VerticalAlignment="Center"
                                               Margin="10,0"/>

                                    <Button Grid.Column="2"
                                            Content="🗑️"
                                            Click="BtnDeleteSubtitle_Click"
                                            Background="#F44336"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Padding="10,5"
                                            Cursor="Hand"
                                            Tag="{Binding}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</Window>
